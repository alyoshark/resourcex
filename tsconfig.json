{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "./lib",
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.test.ts",
    "**/setupTests.ts"
  ]
}
